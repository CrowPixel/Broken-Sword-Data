{
	"format_version": "1.10.0",
	"minecraft:client_entity": {
		"description": {
			"identifier": "boss:gord_the_fallen",
			"min_engine_version": "1.10.0",
			"materials": {
				"default": "zombie"
			},
			"textures": {
				"default": "textures/entity/gord_the_fallen"
			},
			"geometry": {
				"default": "geometry.gord_the_fallen"
			},
			"spawn_egg": {
				"texture": "gord_the_fallen_spawn_egg"
			},
			"scripts": {
				"animate": [
					"idle",
					"main_controller"
				],
				"pre_animation": ["variable.tcos0 = (Math.cos(query.modified_distance_moved * 38.17) * query.modified_move_speed / variable.gliding_speed_value) * 57.3;"]
			},
			"animations": {
				"gallop": "animation.gord_the_fallen.gallop",
				"idle": "animation.gord_the_fallen.idle",
				"swing": "animation.gord_the_fallen.swing",
				"main_controller": "controller.animation.gord_the_fallen.base"
			},
			"render_controllers": ["controller.render.default"],
			"enable_attachables": true
		},
		"events": {
            "low_health_150_event": {
                "add": {
                    "component_groups": ["low_health_150_trigger"]
                }
            },
            "low_health_100_event": {
                "add": {
                    "component_groups": ["low_health_100_trigger"]
                }
            },
            "low_health_50_event": {
                "add": {
                    "component_groups": ["low_health_50_trigger"]
                }
            }
        },
        "component_groups": {
            "low_health_150_trigger": {
                "minecraft:behavior.run_command": {
                    "priority": 0,
                    "command": "say My health is now 150!",
                    "only_once": true
                }
            },
"low_health_100_trigger": {
                "minecraft:behavior.run_command": {
                    "priority": 0,
                    "command": "say My health is now 100!",
                    "only_once": true
                }
            },
            "low_health_50_trigger": {
                "minecraft:behavior.run_command": {
                    "priority": 0,
                    "command": "say My health is now 50!",
                    "only_once": true
                }
            }
        },
        "component_groups": {
            "health_check": {
                "minecraft:on_damage": {
                    "event": "low_health_150_event",
                    "filters": {
                        "test": "health",
                        "subject": "self",
                        "operator": "<=",
                        "value": 150
                    },
                    "target": "self"
                },
                "minecraft:on_damage": {
                    "event": "low_health_100_event",
                    "filters": {
                        "test": "health",
                        "subject": "self",
                        "operator": "<=",
                        "value": 100
                    },
                    "target": "self"
                },
                "minecraft:on_damage": {
                    "event": "low_health_50_event",
                    "filters": {
                        "test": "health",
                        "subject": "self",
                        "operator": "<=",
                        "value": 50
                    },
                    "target": "self"
                }
            }
        },
        "events": {
            "initialize": {
                "add": {
                    "component_groups": ["health_check"]
	}
}

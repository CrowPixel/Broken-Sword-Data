                "minecraft:behavior.run_command": {
                    "priority": 0,
                    "command": "say My health is now 50!",
                    "only_once": true
                }
            },
            "health_check": {
                "minecraft:on_damage": {
                    "event": "low_health_150_event",
                    "filters": {
                        "test": "health",
                        "subject": "self",
                        "operator": "<=",
                        "value": 150
                    },
                    "target": "self"
                },
                "minecraft:on_damage": {
                    "event": "low_health_100_event",
                    "filters": {
                        "test": "health",
                        "subject": "self",
                        "operator": "<=",
                        "value": 100
                    },
                    "target": "self"
                },
                "minecraft:on_damage": {
                    "event": "low_health_50_event",
                    "filters": {
                        "test": "health",
                        "subject": "self",
                        "operator": "<=",
                        "value": 50
                    },
                    "target": "self"
                }
